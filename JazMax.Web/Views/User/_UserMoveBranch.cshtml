@model JazMax.Web.ViewModel.UserAccountView.CoreUserDetails
@using JazMax.Core.SystemHelpers

@{
    JazMaxIdentityHelper.UserName = User.Identity.Name;
}


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#idBranch">
    Move Agent
</button>

<!-- Modal -->
<div class="modal fade" id="idBranch" tabindex="-1" role="dialog" aria-labelledby="idBranchLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="idBranchLabel">Move Branch</h4>
            </div>
            <div class="modal-body">

                
                    <p>Move @Model.FirstName from @Model.UserBranchDetails.BranchName to 
                
                        @Html.DropDownList("ddlDropBranch", @JazMaxDropDownList.GetAllBranches(), new { @class = "foo" })
                    </p>
                    <br />
                    <button type="button" class="btn btn-success" onclick="MoveAgent()">Move Agent</button>
                
               
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>