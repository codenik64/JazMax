<script>

    $('#CoreUserTypeId').on('change', function ()
    {
        $('#hidPA').hide();
        $('#hidTeamLeader').hide();

        var value = $(this).val();

        if (value == '5')
        {
            $('#hidPA').fadeIn();
            $("#hidPA").fadeIn("slow");
            $("#hidPA").fadeIn(3000);
        }
        else if (value == '3')
        {
            $('#hidTeamLeader').fadeIn();
            $("#hidTeamLeader").fadeIn("slow");
            $("#hidTeamLeader").fadeIn(3000);
        }
    });

</script>