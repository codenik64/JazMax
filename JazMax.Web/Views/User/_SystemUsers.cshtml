@model IEnumerable<JazMax.Web.ViewModel.UserAccountView.CoreUserDetails>
@using JazMax.Core.SystemHelpers;

<table class="table table-bordered table-hover dt-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
           
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MiddleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CellPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GenderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserType)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
               @Html.JazMaxUserDetails(item.FirstName, new { id = item.CoreUserId }) 
            </td>
            <td>
                @Html.JazMaxUserDetails(item.MiddleName, new { id = item.CoreUserId })
            </td>
            <td>
                @Html.JazMaxUserDetails(item.LastName,new { id = item.CoreUserId })
            </td>
            <td>
                @Html.JazMaxUserDetails(item.IDNumber, new { id = item.CoreUserId })
            </td>
            <td>
                @Html.JazMaxUserDetails(item.PhoneNumber, new { id = item.CoreUserId })
            </td>
            <td>
                @Html.JazMaxUserDetails(item.CellPhone, new { id = item.CoreUserId })
            </td>
            <td>
                @Html.JazMaxUserDetails(item.EmailAddress, new { id = item.CoreUserId })
            </td>
            <td>
                @Html.JazMaxUserDetails(item.GenderId, new { id = item.CoreUserId })
            </td>
            <td>
                @Html.JazMaxUserDetails(item.UserType, new { id = item.CoreUserId })
            </td>
        </tr>
    }

</table>

<script>
    $('table').DataTable();
</script>