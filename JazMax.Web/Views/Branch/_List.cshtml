@model IEnumerable<JazMax.Web.ViewModel.UserAccountView.CoreBranchView>

@using JazMax.Core.SystemHelpers
<div class="modal-body row">

    <div>
        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading">Branches</div>
                <div class="panel-body">
                    <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.BranchName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmailAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StreetAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.City)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Suburb)
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
        
                                    @Html.JazMaxBranchDetails(item.BranchName, new { id = item.BranchId})

                                </td>
                                <td>

                                    @Html.JazMaxBranchDetails(item.Phone, new { id = item.BranchId })
                                </td>
                                <td>

                                    @Html.JazMaxBranchDetails(item.EmailAddress, new { id = item.BranchId })
                                </td>
                                <td>

                                    @Html.JazMaxBranchDetails(item.StreetAddress, new { id = item.BranchId })
                                </td>
                                <td>
   
                                    @Html.JazMaxBranchDetails(item.City, new { id = item.BranchId })
                                </td>
                                <td>
                                    @Html.JazMaxBranchDetails(item.Suburb, new { id = item.BranchId })
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#branchGrid').DataTable();
</script>
