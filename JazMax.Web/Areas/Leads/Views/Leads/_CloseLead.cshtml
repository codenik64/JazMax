@using JazMax.Core.SystemHelpers
@{
    ViewBag.Title = "View";
}

<button type="button" class="btn btn-success" data-toggle="modal" data-target="#idCloseLead">
    Close Lead
</button>

<!-- Modal -->
<div class="modal fade" id="idCloseLead" tabindex="-1" role="dialog" aria-labelledby="idCloseLeadLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="idCloseLeadLabel">Close Lead</h4>
            </div>
            <div class="modal-body">
                <button type="button" class="btn btn-success" onclick="CaptureCloseLead()">Close Lead</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>

            </div>
            
        </div>
    </div>
</div>


